<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Welcome to Speak Buy. Click on the following start button to start the conversation. You have to tap on speak just once and it will automatically listen to you for a follow up."
            android:gravity="center"
            />


        <TextView
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Now Supporting Mobile, Tablets and Laptops."
            android:gravity="center"
            />


        <Button
            android:id="@+id/button"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center"
            android:text="Start"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            android:layout_width="280dp"
            android:layout_height="49dp"

            android:onClick="dialogSampleClick"

            android:background="@drawable/buttonshape"
        />

        <Button
            android:id="@+id/button2"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center"
            android:text="Saved Amazon Links"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            android:layout_width="280dp"
            android:layout_height="49dp"

            android:onClick="amazonSampleClick"

            android:background="@drawable/buttonshape"
            />

        <TextView
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Support for other products will be added soon."
            android:gravity="center"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="CREDITS"
            android:gravity="center"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Naman Rajpal"
            android:gravity="center"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Mansi Thawani"
            android:gravity="center"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Aishwarya Saxena:"
            android:gravity="center"
            />


    </LinearLayout>


</RelativeLayout>
